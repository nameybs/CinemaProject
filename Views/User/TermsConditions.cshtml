@{
    ViewData["Title"] = "Terms Conditions";
}
<div class="mx-auto mt-5">
    <div id="signup-nav" class="nav nav-tabs">
        <li id="nav-list" class="nav-item">
            <a id="nav-text" class="nav-link disabled" tabindex="-1" aria-disabled="true">본인인증</a>
        </li>
        <li id="nav-list" class="nav-item">
            <a id="nav-text" class="nav-link active" aria-current="page" aria-disabled="true">약관동의</a>
        </li>
        <li id="nav-list" class="nav-item">
            <a id="nav-text" class="nav-link disabled" tabindex="-1" aria-disabled="true">정보입력</a>
        </li>
        <li id="nav-list" class="nav-item">
            <a id="nav-text" class="nav-link disabled" tabindex="-1" aria-disabled="true">가입완료</a>
        </li>
    </div>
    <br /><br />
    <div id="signup-div">
        <p class="page-info-txt">
            <strong>서비스에 필요한 이용약관을 확인 해 주세요.</strong>
            <br />
            <span>이용 약관동의 항목에 체크 후에 다음 버튼을 눌러주세요.</span>
        </p>
        <form id="SignUpForm" class="needs-validation" method="post" novalidate>
            <div class="form-group">
                <label for="UserEmail">Email</label>
                <input class="form-control" name="email" type="email" placeholder="Enter Email" required>
                <div class="invalid-feedback">메일주소를 확인해주세요.</div>
            </div>
            <br />
            <div class="d-grid col-12 mx-auto mb-4">
                <button type="submit" id="emailVerifySubmit" class="btn btn-primary">인증</button>
            </div>
        </form>
    </div>
</div>
<!-- Script Area -->
<script src="~/js/Common/validate.js"></script>
<script>
    $('#LoginSubmit').on('click', function(event) {
        // 입력체크
        if(!$('.needs-validation')[0].checkValidity()) {
            $('.needs-validation')[0].classList.add('was-validated');
        } else {
            // 로그인 처리
            $.ajax({
                url: "/User/LoginCheck",
                data: $('#LoginForm').serialize(),
                contentType: "application/x-www-form-urlencoded",
                dataType: "json",
                type: "POST",
                processData: false,
                success: function (data) {
                    // 정상처리
                    if (data == 0) {
                        // 아이디 저장 여부 확인
                        if($('#SaveId').is(':checked')) {
                            // 쿠키 설정(아이디를 7일동안 보관)
                            setCookie("userID", $("#UserId").val(), 7);
                        } else {
                            // 쿠키삭제
                            deleteCookie("userID");
                        }
                        location.replace('/Home');
                    } else if (data == 1) {
                        alert("ID또는 비밀번호를 확인 해 주세요.");
                    } else if (data == 2) {
                        alert("존재하지 않는 유저입니다.");
                    }
                },
                error: function (data) {
                    alert("알수없는 에러가 발생했습니다.");
                }
            });
        }
    });
</script>
<!-- CSS Area -->
<style>
    #signup-div {
        max-width: 25rem;
        margin: auto;
    }

    #signup-nav {
        max-width: 25rem;
        margin: auto;
    }

    #nav-list {
        min-width: 5rem;
        margin: auto;
    }

    #nav-text {
        text-align: center;
    }

    .nav-link.active {
        font-weight: bold;
    }
</style>