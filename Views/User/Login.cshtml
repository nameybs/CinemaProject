@{
    ViewData["Title"] = "Login";
}
<div id="login-div" class="mx-auto mt-5">
    <form id="LoginForm" class="needs-validation" method="post" novalidate>
        <!-- 아이디 입력 -->
        <div class="form-outline mb-4">
            <label class="form-label" for="UserId">아이디</label>
            <input type="text" id="userId" class="form-control" name="userId" placeholder="Enter ID" required />
            <div class="invalid-feedback">아이디를 입력해주세요.</div>
        </div>
        <!-- 비밀번호 입력 -->
        <div class="form-outline mb-4">
            <label class="form-label" for="UserPassword">비밀번호</label>
            <input type="password" id="userPassword" class="form-control" name="userPassword" placeholder="Enter Password" required />
            <div class="invalid-feedback">비밀번호를 입력해주세요.</div>
        </div>
        <!-- 입력정보 저장 -->
        <div class="row mb-4">
            <div class="col d-flex justify-content-center">
                <div>
                    <input type="checkbox" id="saveId" checked />
                    <label for="saveId"> 아이디 저장 </label>
                </div>
            </div>
            <div class="col">
                <!-- 비밀번호 찾기 -->
                <a href="#!">비밀번호 찾기</a>
            </div>
        </div>
        <!-- 로그인 버튼 -->
        <div class="d-grid col-12 mx-auto mb-4">
            <button type="submit" id="loginSubmit" class="btn btn-primary">로그인</button>
        </div>
    </form>
    <!-- 회원가입 버튼 -->
    <div class="text-center">
        <p>아직 회원이 아니세요? <a href="/User/SignUp"> 회원가입</a></p>
    </div>
</div>
<!-- Script Area -->
<script src="~/js/Common/validate.js"></script>
<script src="~/js/Common/cookieControl.js"></script>
<script>
    // 초기화 처리
    $(document).ready(function(){
        $("#userId").val(getCookie("userID"));
    });

    $('#loginSubmit').on('click', function(event) {
        // 입력체크
        if(validate()) return;

        // 로그인 처리
        $.ajax({
            url: "/User/LoginCheck",
            data: $('#loginForm').serialize(),
            contentType: "application/x-www-form-urlencoded",
            dataType: "json",
            type: "POST",
            processData: false,
            success: function (data) {
                // 정상처리
                if (data == 1) {
                    // 아이디 저장 여부 확인
                    if($('#saveId').is(':checked')) {
                        // 쿠키 설정(아이디를 7일동안 보관)
                        setCookie("userID", $("#userId").val(), 7);
                    } else {
                        // 쿠키삭제
                        deleteCookie("userID");
                    }
                    location.replace('/Home');
                } else if (data == 0) {
                    alert("ID또는 비밀번호를 확인 해 주세요.");
                    event.preventDefault();
                    event.stopPropagation();
                }
            },
            error: function (data) {
                alert(data);
                event.preventDefault();
                event.stopPropagation();
            }
        });
    });
</script>
<!-- CSS Area -->
<style>
    #login-div {
        max-width: 25rem;
        margin: auto;
    }
</style>